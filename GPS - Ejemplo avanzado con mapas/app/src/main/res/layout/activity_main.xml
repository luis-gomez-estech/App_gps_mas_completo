<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:orientation="vertical"
    android:background="#fff">

    <!-- Un loading previo a la app, en el MainActivity,
     podemos cambiar el tiempo que tarda en pasar de activity -->

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:progressDrawable="@drawable/loading_personalizado"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:indeterminateTint="#000"
        />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icono_gps"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/letras_inicio"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/letras_inicio"
        android:layout_marginTop="0dp"
        android:layout_gravity="center"/>

</LinearLayout>


